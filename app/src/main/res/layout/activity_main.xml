<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.opyetco.meter.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite">
        <ImageView
            android:id="@+id/welcomeIcon"
            android:src="@drawable/ic_lightbulb_outline_black_48dp"
            android:layout_width="80dp"
            android:tint="@color/colorPrimary"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="120dp"/>
        <TextView
            android:id="@+id/welcomeIconName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="38sp"
            android:layout_below="@id/welcomeIcon"
            android:layout_centerHorizontal="true"
            android:textAppearance="?android:textAppearanceMedium"/>
        <Button
            style="@style/ButtonStructure"
            android:layout_below="@id/welcomeIconName"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Proceed"
            android:onClick="openLogin"/>
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
