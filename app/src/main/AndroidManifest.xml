<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.opyetco.meter">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/flatbulbicon1024"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/flatbulbicon1024"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="i-Meter">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="Authorization" />
        <activity
            android:name=".MenuActivity"
            android:label="Menu" />
        <activity
            android:name=".AdminBlockNodesActivity"
            android:label="Administrative Blocks" />
        <activity
            android:name=".LaboratoryNodesActivity"
            android:label="Laboratories" />
        <activity
            android:name=".HostelsNodesActivity"
            android:label="Hostels" />
        <activity
            android:name=".LectureHallsNodesActivity"
            android:label="Lecture Halls" />
        <activity
            android:name=".BusinessUnitNodesActivity"
            android:label="Business Units" />
        <activity
            android:name=".OthersNodesActivity"
            android:label="Others" />
        <activity
            android:name=".ReadingsActivity"
            android:label="Readings" />
        <activity
            android:name=".SetIndex"
            android:label="Set Index" />
        <activity
            android:name=".DayReadingActivity"
            android:label="View Daily History" />
    </application>

</manifest>